<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="robotiq_gripper" params="prefix parent *origin">
    
    <!-- Main Gripper Base Link -->
    <link name="${prefix}_gripper_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.10 0.08 0.03"/>
        </geometry>
        <material name="black">
          <color rgba="0.05 0.05 0.05 1"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.10 0.08 0.03"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>

    <joint name="${prefix}_gripper_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_gripper_link"/>
    </joint>

    <!-- Left Finger -->
    <link name="${prefix}_left_finger">
      <visual>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <geometry>
          <box size="0.015 0.03 0.11"/>
        </geometry>
        <material name="dark_grey">
          <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <geometry>
          <box size="0.015 0.03 0.11"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <!-- Gazebo friction properties for left finger -->
    <gazebo reference="${prefix}_left_finger">
      <mu1>100.0</mu1>
      <mu2>100.0</mu2>
      <kp>1e10</kp>
      <kd>1000</kd>
      <minDepth>0.001</minDepth>
      <maxContacts>20</maxContacts>
    </gazebo>

    <joint name="${prefix}_left_finger_joint" type="prismatic">
      <origin xyz="0 0.025 0.015" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_link"/>
      <child link="${prefix}_left_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.07" effort="300" velocity="0.5"/>
      <dynamics damping="20.0" friction="2.0"/>
    </joint>

    <!-- Right Finger -->
    <link name="${prefix}_right_finger">
      <visual>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <geometry>
          <box size="0.015 0.03 0.11"/>
        </geometry>
        <material name="dark_grey">
          <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <geometry>
          <box size="0.015 0.03 0.11"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <!-- Gazebo friction properties for right finger -->
    <gazebo reference="${prefix}_right_finger">
      <mu1>100.0</mu1>
      <mu2>100.0</mu2>
      <kp>1e10</kp>
      <kd>1000</kd>
      <minDepth>0.001</minDepth>
      <maxContacts>20</maxContacts>
    </gazebo>

    <joint name="${prefix}_right_finger_joint" type="prismatic">
      <origin xyz="0 -0.025 0.015" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_link"/>
      <child link="${prefix}_right_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.07" upper="0.0" effort="300" velocity="0.5"/>
      <dynamics damping="20.0" friction="2.0"/>
      <mimic joint="${prefix}_left_finger_joint" multiplier="-1" offset="0"/>
    </joint>

    <!-- Gripper Tool Center Point (TCP) -->
    <link name="${prefix}_gripper_tcp"/>
    
    <joint name="${prefix}_gripper_tcp_joint" type="fixed">
      <origin xyz="0 0 0.13" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_link"/>
      <child link="${prefix}_gripper_tcp"/>
    </joint>

  </xacro:macro>

</robot>

