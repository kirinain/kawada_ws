<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="simple_gripper" params="prefix parent *origin">
    
    <!-- Gripper Base Link (attached to wrist) -->
    <link name="${prefix}_gripper_base_link">
      <visual>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.04 0.04"/>
        </geometry>
        <material name="gripper_gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <geometry>
          <box size="0.03 0.04 0.04"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <origin xyz="0 0 0.02" rpy="0 0 0"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}_gripper_base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}_gripper_base_link"/>
    </joint>

    <!-- Left Finger -->
    <link name="${prefix}_gripper_left_finger">
      <visual>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.08"/>
        </geometry>
        <material name="gripper_dark">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.08"/>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1000.0</mu>
              <mu2>1000.0</mu2>
              <fdir1>0 0 1</fdir1>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e12</kp>
              <kd>1.0</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <joint name="${prefix}_gripper_left_finger_joint" type="prismatic">
      <origin xyz="0 0.015 0.04" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_base_link"/>
      <child link="${prefix}_gripper_left_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.04" effort="100" velocity="0.5"/>
    </joint>

    <!-- Right Finger -->
    <link name="${prefix}_gripper_right_finger">
      <visual>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.08"/>
        </geometry>
        <material name="gripper_dark">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.02 0.08"/>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1000.0</mu>
              <mu2>1000.0</mu2>
              <fdir1>0 0 1</fdir1>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e12</kp>
              <kd>1.0</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <joint name="${prefix}_gripper_right_finger_joint" type="prismatic">
      <origin xyz="0 -0.015 0.04" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_base_link"/>
      <child link="${prefix}_gripper_right_finger"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.04" upper="0.0" effort="100" velocity="0.5"/>
      <mimic joint="${prefix}_gripper_left_finger_joint" multiplier="-1" offset="0"/>
    </joint>

    <!-- Gripper Tool Center Point (TCP) -->
    <link name="${prefix}_gripper_tcp"/>
    
    <joint name="${prefix}_gripper_tcp_joint" type="fixed">
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <parent link="${prefix}_gripper_base_link"/>
      <child link="${prefix}_gripper_tcp"/>
    </joint>

  </xacro:macro>

</robot>


